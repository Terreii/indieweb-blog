<h1 class="admin_title">‚å®Ô∏è <%= set_title t("admin.index") %></h1>

<%= turbo_stream_from "admin_entries" %>

<div id="admin_container">
  <div class="admin_sidebar_sticky">
    <aside class="admin_sidebar">
      <h2 class="admin_sub_header">üìù <%= t "admin.create" %></h2>

      <ul id="admin_create__list">

        <% Entry.types.each do |type| %>
          <li>
            <%= link_to type, [:new, type.downcase.to_sym] %>
          </li>
        <% end %>
      </ul>
    </aside>

    <aside class="admin_sidebar">
      <h2 class="admin_sub_header">üîç <%= t "admin.filter.title" %></h2>

      <%= render "filter", types: @types, types_map: @types_map, published: @published %>
    </aside>
  </div>

  <table class="admin_table">
    <thead>
      <tr>
        <th><%= t "admin.table.title" %></th>
        <th><%= t "admin.table.type" %></th>
        <th><%= t "admin.table.lang" %></th>
        <th><%= t "admin.table.published" %></th>
        <th colspan="2"><%= t "admin.table.action" %></th>
      </tr>
    </thead>
    <tbody id="entries">
      <% @entries.each do |entry| %>
        <%= render partial: "entry", locals: { entry: } %>
      <% end %>
    </tbody>
  </table>
</div>
