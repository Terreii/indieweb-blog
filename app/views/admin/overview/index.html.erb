<h1 class="admin_title">⌨️ <%= set_title t("admin.index") %></h1>

<%= turbo_stream_from "admin_entries" %>

<h2 class="admin_sub_header">📝 <%= t "admin.create" %></h2>

<ul id="admin_create__list">
  <% Entry.types.each do |type| %>
    <li>
      <%= link_to type, [:new, type.downcase.to_sym] %>
    </li>
  <% end %>
</ul>

<h2 class="admin_sub_header">📤 <%= t "admin.existing" %></h2>

<table class="admin_table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Language</th>
      <th>Published at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody id="entries">
    <% @entries.each do |entry| %>
      <%= render partial: "entry", locals: { entry: } %>
    <% end %>
  </tbody>
</table>
