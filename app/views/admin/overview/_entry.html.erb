<%# locals: (entry:) -%>
<tr id="<%= dom_id entry %>" class="admin_table__item">
  <td lang="<%= entry.language_code %>" class="admin_table__field">
    <%= link_to entry.title, entry.entryable %>
  </td>

  <td class="admin_table__field">
    <div class="admin_table__mobile_info"><%= t "admin.table.type" %>:</div>
    <%= entry.entryable_type %>
  </td>

  <td class="admin_table__field">
    <div class="admin_table__mobile_info"><%= t "admin.table.lang" %>:</div>
    <%= entry.language.capitalize %>
  </td>

  <td class="admin_table__field">
    <div class="admin_table__mobile_info"><%= t "admin.table.published" %>:</div>
    <% if entry.published? %>
      <time datetime="<%= entry.published_at.iso8601 %>">
        <%= entry.published_at %>
      </time>
    <% else %>
      <%= t("admin.draft") %>
    <% end %>
  </td>

  <td class="admin_table__field">
    <div class="admin_table__actions_cell">
      <%= link_to t("admin.table.edit"), [:edit, entry.entryable] %> |

      <%= button_to t("admin.table.delete"), entry.entryable, method: :delete, class: "btn btn-danger", data: {
        turbo_confirm: t("admin.table.delete_check")
      } %>
    </div>
  </td>
</tr>
