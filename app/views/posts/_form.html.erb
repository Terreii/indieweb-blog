<%= form_with model: post, class: "form" do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="field">
    <%= form.label :slug %>
    <%= form.text_field :slug, pattern: "^[a-z0-9][a-z0-9\-_]+[a-z0-9]$", class: "form-input" %>
  </div>

  <div class="field">
    <%= form.label :thumbnail %>
    <%= form.file_field :thumbnail, class: "form-input" %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.rich_text_area :body %>
  </div>

  <div class="checkbox_field">
    <%= form.check_box :published %>
    <%= form.label :published %>
  </div>

  <div class="actions">
    <%= form.submit nil, class: 'btn' %>
  </div>

  <%= render "tags/form", form: form, name: "post" %>
<% end %>

<br>

<div class="display-as-row gapped">
  <%= render "tags/create" %>
</div>
