<%= form_with model: post, class: "form" do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-input" %>
  </div>

  <div class="field">
    <%= form.label :slug %>
    <%= form.text_field :slug, pattern: "^[a-z0-9][a-z0-9\-_]+[a-z0-9]$", class: "form-input" %>
  </div>

  <div class="checkbox_field">
    <%= form.check_box :published %>
    <%= form.label :published %>
  </div>

  <details>
    <summary>Tags</summary>

    <div class="display-as-row gapped">
      <div class="field flex-col">
        <%= form.collection_check_boxes :tag_ids, tags, :id, :name do |b|
          b.label { b.check_box + b.text }
        end %>
      </div>

      <div class="field">
        <%= label_tag :new_tags %>
        <br />
        <%= text_field_tag :new_tags, "", class: "form-input" %>
        <br />
        <small class="field_description">Separated by commas.</small>
      </div>
    </div>
  </details>

  <div class="field">
    <%= form.label :body %>
    <%= form.rich_text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit nil, class: 'btn' %>
  </div>
<% end %>
